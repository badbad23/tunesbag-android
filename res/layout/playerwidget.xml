<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/widget_widget"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="120dp"
  android:clickable="true"
  android:background="@drawable/appwidget_bg">
	<RelativeLayout android:id="@+id/widget_playpausenext"
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:layout_alignParentRight="true" 
	  android:layout_centerInParent="true">
	  <ImageButton android:id="@+id/widget_ppbutton"
	  	android:layout_width="wrap_content"
	  	android:layout_height="wrap_content"
	  	android:layout_toLeftOf="@+id/widget_nbutton"
	  	android:src="@drawable/play"
	  	android:background="#00000000"
	  	android:layout_centerInParent="true" 
	  	android:paddingRight="3dip"
	  	android:visibility="invisible"/>
	  <ImageButton android:id="@+id/widget_nbutton"
	  	android:layout_width="wrap_content"
	  	android:layout_height="wrap_content"
	  	android:layout_alignParentRight="true"
	  	android:src="@drawable/next"
	  	android:background="#00000000"
	  	android:layout_centerInParent="true"
	  	android:visibility="invisible"/>
  	</RelativeLayout>
	<TextView android:id="@+id/widget_title"
  	  android:layout_width="wrap_content"
  	  android:layout_height="wrap_content"
  	  android:layout_alignParentLeft="true"
  	  android:text="@string/noplaylist"	
  	  android:textSize="18sp" android:paddingTop="5px" android:paddingLeft="10px" android:maxWidth="170dp" android:maxLines="2"/>
	<TextView android:id="@+id/widget_artist"
  	  android:layout_width="wrap_content"
  	  android:layout_height="wrap_content"
  	  android:layout_alignParentLeft="true"
  	  android:layout_below="@+id/widget_title"
  	  android:text=""	
  	  android:textSize="14sp" android:paddingLeft="10px" android:maxWidth="160dp" android:maxLines="1"/>
</RelativeLayout>
